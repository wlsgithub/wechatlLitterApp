/**weather.wxss**/

.city {
  width: 100%;
  height: 40px;
  background:#cef;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center
}
.wtCity{
  padding-left: 10px;
  height: 100%;
  width: 30%;
  display:flex;
  flex-direction: row;
  align-items: center
}
.wtDate{
  height: 100%;
  width: 30%;
   display:flex;
  flex-direction: row;
  align-items: center
}
.city text {
  font-size: 16px;
  color: #666;
}

.city .update {
  font-size: 12px;
  float: right;
}

/**天气模块**/
.weather {
  overflow: hidden;
  background: #cef;
  color: #58b;
  padding: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 13pt;
  border-bottom: 1px #bbd solid;
}
.wt{
  width: 80%;
  display: flex;
  flex-direction: row;
  align-content: center;
}
/**天气模块左侧**/
.weather .weatherL {
  width: 50%;
  height: 150px;
}
/* 图标 */
.weather .wl1{
  display: flex;
    align-items: center;
    justify-content:center;
}
.weather .wl2{
  font-size: 17px;
  display: flex;
    align-items: center;
    justify-content:center;
}
.weather .TqLogo {
  width: 100px;
  height: 100px;
}
/* 天气模块右侧 */
.weather .weatherR {
  
  width: 50%;
  height: 150px;
}
.weatherR .wr1,.wr2{
display: flex;
    align-items: center;
    justify-content:center;
}
.wr1{
  height: 100px
}
/* 温度 */
 .weatherR .temperature {
  font-size: 25px;
}
 .weatherR .wind {
  font-size: 17px;
}
.futher{
  background:#cef;
  margin: 2px 0;
}

.daywt{
  height: 30px;
  width: 100%;
  font-size: 11pt;
  display: flex;
  padding-left:12px;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
}
.daydate,.daylog,.daytemp{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items:center;
  text-align: center
}
/*生活指数*/
.suggestion .title{ display: block; padding: 3% 5%; background: #58b; color: #fff;}
.suggestion .list{
   display: flex;
   flex-direction: column; 
   font-size: 12px; 
   margin-top: 1px; 
   width: 34%;
   height: 105px;
   }
   .suggestall{
     width: 100%;
     height: 105px;
     display: flex;
     flex-direction: row;
     justify-content: center;
   }
.suggestion .list_l{ flex: 1; text-align: center; background: #cef; color: #bbd; padding: 8px;}
.suggestion .list_l image{ width:30px; height: 30px; display: block; margin: 0 auto;}
.suggestion .list_r{ flex: 4; background: #cef;
 padding: 8px; color: #aaa;
 text-align: center;}
.suggestion .list_t{ font-size: 14px; display: block; margin-bottom: 5px; color: #333;}